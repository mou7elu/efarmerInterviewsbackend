{
  "name": "efarmer-backend",
  "version": "1.0.0",
  "description": "Backend eFarmer avec Clean Architecture SOLID",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "migrate": "node src/infrastructure/database/migrations/run-migrations.js",
    "seed": "node src/infrastructure/database/seeds/run-seeds.js",
    "docs": "jsdoc -c jsdoc.conf.json",
    "build": "echo 'Build completed'",
    "clean": "rimraf coverage docs/generated node_modules/.cache"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "mongoose",
    "clean-architecture",
    "ddd",
    "solid",
    "agriculture",
    "efarmer"
  ],
  "author": "eFarmer Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "docxtemplater": "^3.67.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "pizzip": "^3.2.0",
    "puppeteer": "^23.0.0",
	"mammoth": "^1.6.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "verbose": true,
    "clearMocks": true,
    "restoreMocks": true
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "models",
      "index.js"
    ],
    "ext": "js,json",
    "ignore": [
      "tests/",
      "docs/",
      "coverage/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
